<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderTitle">@style/MaterialCalendarHeader</item>
        <item name="materialCalendarHeaderSelection">@style/MaterialCalendarSelectedText</item>
    </style>

    <style name="MaterialCalendarHeader" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="MaterialCalendarSelectedText" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="NewSubmissionDialogTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ConfirmationDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ConfirmationButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ConfirmationButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ConfirmationButtonStyle</item>
    </style>
    <style name="ConfirmationButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PrimaryActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:backgroundTint">@color/primary_action</item>
        <item name="android:layout_marginStart">@dimen/horizonal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizonal_margin</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PrimaryInput" parent="">
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="PrimaryInputEdit">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="CardSquareBottomCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DashboardCard">
        <item name="android:layout_marginStart">@dimen/horizonal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizonal_margin</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/cardBorder</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardDescription">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OnboardingHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryHeader">
        <item name="android:textColor">#9B9CAE</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000</item>   <!-- border color -->
        <item name="colorControlActivated">@color/colorPrimary</item> <!-- activated color -->
    </style>

    <style name="HeaderButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserInfo">
        <item name="android:textColor">#706F8B</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
